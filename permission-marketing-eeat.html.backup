        /* Section Styling */
        .section {
            margin-bottom: 50px;
        }

        .section h2 {
            font-size: 1.6rem;
            font-weight: 700;
            color: var(--primary);
            margin-bottom: 24px;
            padding-bottom: 12px;
            border-bottom: 3px solid var(--accent);
            display: inline-block;
        }

        .section h3 {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--primary);
            margin: 30px 0 16px;
        }

        .section p {
            font-size: 1.05rem;
            color: var(--text);
            margin-bottom: 20px;
        }

        /* Quote Block - E-E-A-T Authority */
        .quote-block {
            background: var(--gradient-primary);
            padding: 40px;
            border-radius: 16px;
            margin: 40px 0;
            position: relative;
        }

        .quote-block::before {
            content: '"';
            font-family: 'Playfair Display', serif;
            font-size: 8rem;
            color: white;
            opacity: 0.1;
            position: absolute;
            top: -20px;
            left: 20px;
            line-height: 1;
        }

        .quote-block blockquote {
            font-size: 1.2rem;
            color: white;
            font-style: italic;
            position: relative;
            z-index: 1;
            margin: 0;
        }

        .quote-source {
            margin-top: 16px;
            padding-top: 16px;
            border-top: 1px solid rgba(255,255,255,0.2);
        }

        .quote-author {
            color: var(--gold);
            font-size: 0.95rem;
            font-style: normal;
            font-weight: 600;
        }

        .quote-credential {
            color: rgba(255,255,255,0.7);
            font-size: 0.85rem;
            font-style: normal;
        }

        /* Statistics Box - E-E-A-T Evidence */
        .stats-box {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 24px;
            margin: 40px 0;
        }

        .stat-card {
            background: var(--bg);
            padding: 30px;
            border-radius: 16px;
            text-align: center;
            border: 1px solid #eee;
        }

        .stat-number {
            font-size: 2.5rem;
            font-weight: 900;
